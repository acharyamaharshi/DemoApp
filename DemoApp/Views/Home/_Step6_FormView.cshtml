<div class="card">
    <div class="card-header">
        <h3 class="card-title">Preferences</h3>
    </div>
    <div class="card-body">
        <form id="preferenceForm">
            <div class="form-group">
                <label for="preferredLocation">Preferred Location</label>
                <input type="text" class="form-control" id="preferredLocation" name="Preference.PreferredLocation" placeholder="Enter preferred location" required>
            </div>
            <div class="form-group">
                <label for="currentCTC">Current CTC</label>
                <input type="number" class="form-control" id="currentCTC" name="Preference.CurrentCTC" placeholder="Enter current CTC" required>
            </div>
            <div class="form-group">
                <label for="preferredCTC">Preferred CTC</label>
                <input type="number" class="form-control" id="preferredCTC" name="Preference.PreferredCTC" placeholder="Enter preferred CTC" required>
            </div>
            <div class="form-group">
                <label for="noticePeriod">Notice Period (in days)</label>
                <input type="number" class="form-control" id="noticePeriod" name="Preference.NoticePeriod" placeholder="Enter notice period" required>
            </div>
            <button id="Step6_SaveButton" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>
